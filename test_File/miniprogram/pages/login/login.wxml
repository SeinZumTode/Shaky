
<!--pages/login/login.wxml-->
<view class="container"> 
  <view class="login-icon">  
    <image class="login-img" src="https://7368-shaky-2gd38t77a0797611-1308369320.tcb.qcloud.la/%E8%83%8C%E6%99%AF%EF%BC%88%E5%8D%95%E4%B8%AA%E7%99%BD%E7%90%83%EF%BC%89.jpg?sign=9eb3c607e3c392b5a17e2b390284b54b&t=1637580575"></image>  
  </view>  
  <view class="login-from">  
  <form bindsubmit="formSubmit" class='form'>
    <view class="myno">
    <!-- 输入电话 -->
      <view class="weui-cell weui-cell_input">
      <image class="nameImage" src="cloud://shaky-2gd38t77a0797611.7368-shaky-2gd38t77a0797611-1308369320/name.png"></image>
          <!-- <view class="weui-cell__hd">
              <view class="weui-label">电话号码</view>
          </view> -->
          <view class="weui-cell__bd">
              <input class="weui-input"  name="no" bindinput="noinput" value='{{no}}' placeholder="enter your mobile phone number" placeholder-class="phcolor" />
          </view>
      </view>
    </view>
    <view class="mypwd">
      <!-- 验证码 -->
      <view class="weui-cell weui-cell_input">
      <image class="nameImage" src="cloud://shaky-2gd38t77a0797611.7368-shaky-2gd38t77a0797611-1308369320/key.png"></image>
          <!-- <view class="weui-cell__hd">
              <view class="weui-label">验证码</view>
          </view> -->
          <view class="weui-cell__bd">
              <input class="weui-input" type="password" name="pwd" bindinput="pwdinput" placeholder="the verification code" placeholder-class="phcolor"  value='{{pwd}}'/>
          </view>
      </view>
    </view>
 <!-- text -->
<view class="text">
<text>Welcome to shaky</text>
</view>
     <!--按钮-->  
    <view class="loginBtnView">  
      <button bindtap="gotoPage" class="loginBtn" >log in</button>  
    </view>  

<!--提示-->
<view class="note">
<text>Automatic creation of shaky accounts after 
verification of unregistered mobile numbers</text>
</view>
    </form>
  </view>  
</view>  



