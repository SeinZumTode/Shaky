  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding:0;
    box-sizing: border-box;
    /* background-color: #f2f2f2;     */
  } 
   
  /*登录图片*/
  .login-icon{
    flex: none;
    margin: 0 auto;
    margin-top: 200rpx;
  }
  .login-img{
    width: 220rpx;
    height: 220rpx;
    border-radius: 110rpx;
    opacity: 0.6;
  }
   
  /*表单内容*/
  .login-from {
    margin-top: 10px;
    flex: auto;
    height:100%;
  }
   
  /* 输入框 */
  .myno{
    width: 80%;
    height: 90rpx;
    margin: 0 auto;
    border:1px solid rgb(252, 251, 251);
    border-radius: 50rpx;
    background-color:rgb(248, 246, 246) ;
   
  }
  .mypwd{
    width: 80%;
    height: 90rpx;
    margin: 0 auto;
    margin-top: 20px;
    border:1px solid rgb(252, 251, 251);
    border-radius: 50rpx;
    background-color:rgb(248, 246, 246) ;
  }


  .phcolor {
    color: #928d8d;
    margin-left:40px;
  }
  
  /*按钮*/
  .loginBtnView {
    margin-top: 0px;
    margin-bottom: 0px;
    padding-bottom: 0px;
  }
   
  .loginBtn {
    width: 90%;
    height: 80rpx;
    line-height: 50rpx;
    margin-top: 120px;
    color: #fff;
    background-color:#a81712;
    border: 5rpx solid rgb(253, 28, 28);
    border-radius: 40rpx;
  }
   
   
  .nameImage, .keyImage {
    margin-right: 10px;
    width: 20px;
    height: 20px;
  }
  
  .note{
